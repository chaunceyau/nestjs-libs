{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCommits": true
  },
  "npm": {
    "publishPath": "./dist/libs/nestjs-relay",
    "skipChecks": true,
    "publish": true
  },
  "hooks": {
    "after:bump": [
      "npm run build",
      "node ./scripts/clean-and-copy-package-json.js"
    ]
  }
}
